// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model user{
  id        Int     @id @default(autoincrement())
  fname      String   
  lname     String    
  email     String   @unique
  password  String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  deletedAt DateTime 
  status    Int @default(1)
  bookings  bookings[]
}

model bookings{
   id              Int     @id @default(autoincrement())
   adult_count     Int
   child_count     Int
   contact         Int
   user_id         Int      
   user            user? @relation(fields: [user_id], references: [id])
}

model package_category{
  id             Int     @id @default(autoincrement())
  name           String
  adult_price    Float
  child_price    Float
  total_price    Float
  createdAt      DateTime @default(now())
  updatedAt      DateTime @updatedAt
  deletedAt      DateTime 
  status         Int @default(1)
  packages packages[]
}

model packages {
  id             Int     @id @default(autoincrement())
  name           String  @unique
  description    String
  days           Int
  departure_city String
  departure_date DateTime
  arrival_date   DateTime
  adult_price    Float
  child_price    Float
  hotel_distence Int
  createdAt      DateTime @default(now())
  updatedAt      DateTime @updatedAt
  deletedAt      DateTime 
  status         Int @default(1)
  hotel          String
  package_category_id Int
  package_category    package_category? @relation(fields: [package_category_id], references: [id])
}



