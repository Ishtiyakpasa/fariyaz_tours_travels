<!-- Header Start -->
<div class="header-area header-sticky">
  <div class="main-header">
    <div class="container">
      <div class="row align-items-center">
        <!-- logo -->
        <div class="col-xl-1 col-lg-1">
          <div class="logo">
            <a href="<%= baseUrl %>/user"><img src="<%= baseUrl %>/assets/images/logo/logo1.png" alt="" style="height: 110px"/></a>
          </div>
        </div>
        <div class="col-xl-9 col-lg-9">
          <!-- main-menu -->
          <div class="main-menu f-right d-none d-lg-block">
            <nav>
              <ul id="navigation">
                <li><a href="<%= baseUrl %>/user">Home</a></li>
                <li><a href="<%= baseUrl %>/user/hajj">Hajj</a></li>
                <li><a href="<%= baseUrl %>/user/umrah">Umrah</a></li>
                <li><a href="<%= baseUrl %>/user/contact_us">Contact us</a></li>
              </ul>
            </nav>
          </div>
        </div>
        <div class="col-xl-2 col-lg-2">
          <!-- header-btn -->
          <div class="header-btn">
            <% if (isLoggedIn) { %>
                <!-- Show profile button if user is logged in -->
                <div class="header-btn">
                    <a href="<%= baseUrl %>/user/logout" class="btn btn1 d-none d-lg-block" id="loginButton">LOGOUT</a>
                </div>
            <% } else { %>
                <!-- Show login button if user is not logged in -->
                <div class="header-btn">
                    <a href="<%= baseUrl %>/user/user_login" class="btn btn1 d-none d-lg-block" id="loginButton">LOGIN/SIGN UP</a>
                </div>
            <% } %>
          </div>

        </div>
        <!-- Mobile Menu -->
        <div class="col-12">
          <div class="mobile_menu d-block d-lg-none"></div>
        </div>
      </div>
    </div>
  </div>
</div>
<!-- Header End -->
