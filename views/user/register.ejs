<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Register</title>
    <!-- <link rel="manifest" href="site.webmanifest"> -->
    <link rel="shortcut icon" type="image/x-icon" href="<%= baseUrl %>/assets/images/android-chrome-192x192.png">
    <link href="<%= baseUrl %>/assets/libs/flatpickr/flatpickr.min.css" rel="stylesheet" type="text/css" />
    <link href="<%= baseUrl %>/assets/css/icons.min.css" rel="stylesheet" type="text/css" />
    <%- include('common/css-link') %>
</head>
<body>
  <div class="container">
    <div class="row justify-content-center mt-200">
        <div class="col-md-6">
            <form id="createUser" name="createUser" method="post">
                <!-- fname input -->
                <div class="form-outline mb-4">
                    <input type="text" id="fname" name="fname" class="form-control" style="max-width: 400px;" />
                    <label class="form-label" for="form2Example1">First Name</label>
                </div>

                <!-- sname input -->
                <div class="form-outline mb-4">
                    <input type="text" id="lname" name="lname" class="form-control" style="max-width: 400px;" />
                    <label class="form-label" for="form2Example1">Last Name</label>
                </div>

                <!-- email input -->
                <div class="form-outline mb-4">
                    <input type="email" id="email" name="email" class="form-control" style="max-width: 400px;" />
                    <label class="form-label" for="form2Example1">Email address</label>
                </div>
            
                <!-- Password input -->
                <div class="form-outline mb-4">
                    <input type="password" id="password" name="password" class="form-control" style="max-width: 400px;" />
                    <label class="form-label" for="form2Example2">Password</label>
                </div>
            
                <!-- Submit button -->
                <button type="submit" class="btn btn-warning btn-block font-weight-bold mb-4" style="max-width: 400px;">Register</button>
            
                <!-- Register buttons -->
                <div class="form-outline px-5">
                    <h5 class="text-dark">Do have an account? <a class="text-warning" href="<%= baseUrl %>/user/user_login">Log in</a></h5>
                </div>
            </form>
        </div>
    </div>
</div>

<!-- Bootstrap JS and Popper.js (required for Bootstrap) -->
<script src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.11.6/dist/umd/popper.min.js"></script>
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.min.js"></script>
<script src="<%= baseUrl %>/assets/js/get_entity_id.js"></script>
<script src="<%= baseUrl %>/assets/js/date_format.js"></script>
<!-- <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11.6.6/dist/sweetalert2.all.min.js"></script> -->
<%- include ('common/script-link') %>

<script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
<script>
 $(document).ready(function() {
  $('#createUser').submit(function(event) {
    event.preventDefault(); // Prevent default form submission

    // Get form data
    var formData = {
      fname: $('#fname').val(),
      lname: $('#lname').val(),
      email: $('#email').val(),
      password: $('#password').val()
    };

    // Send AJAX request
    $.ajax({
      url: '<%= baseUrl %>/user/create_user',
      type: 'POST',
      data: formData,
      dataType: 'json',
      success: function(response) {
        // console.log('Form Data:', formData);
        // Handle success response
        console.log('Registration successful:', response);
        // Redirect to login page or show success message
        window.location.href = '<%= baseUrl %>/user/user_login';
      },
      error: function(xhr, status, error) {
        // Handle error response
        console.error('Registration failed:', error);
        alert('Registration failed. Please try again.');
      }
    });
  });
});

</script>

</body>
</html>

