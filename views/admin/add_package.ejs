<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>bookings Management</title>
  <link href="<%= baseUrl %>/assets/libs/sweetalert2/sweetalert2.min.css" rel="stylesheet" type="text/css" />
  <link href="<%= baseUrl %>/assets/libs/flatpickr/flatpickr.min.css" rel="stylesheet" type="text/css" />
  <link href="<%= baseUrl %>/assets/libs/selectize/css/selectize.bootstrap3.css" rel="stylesheet" type="text/css" />
  <%- include('common/head-css') %>
</head>

<body>
  <div id="wrapper">
    <%- include ('common/sidenav') %>
      <div class="content-page">
        <%- include ('common/topbar') %>
          <div class="content">
            <div class="container">
              <div class="row mt-2">
                <form action="<%= baseUrl %>/admin/package_management/add_package" method="post" enctype="multipart/form-data">
                  <div class="mb-3">
                    <label for="simpleinput" class="form-label">Package Name</label>
                    <input type="text" id="name" name="name" class="form-control">
                  </div>

                  <div class="mb-3">
                    <label for="example-select" class="form-label">Package Category</label>
                    <select class="form-select" name="package_category" id="package_category">
                      <option>Hajj</option>
                      <option>Umrah</option>
                    </select>
                  </div>

                  <div class="mb-3">
                    <label for="simpleinput" class="form-label">Departure City</label>
                    <input type="text" id="departure_city" name="departure_city" class="form-control">
                  </div>

                  <div class="mb-3">
                    <label for="simpleinput" class="form-label">Hotel</label>
                    <input type="text" id="hotel" name="hotel" class="form-control">
                  </div>

                  <div class="mb-3">
                    <label for="simpleinput" class="form-label">Baggage Allowance</label>
                    <input type="text" id="baggage" name="baggage" class="form-control">
                  </div>

                  <div class="mb-3">
                    <label for="simpleinput" class="form-label">Meal Provided</label>
                    <input type="text" id="meal" name="meal" class="form-control">
                  </div>

                  <div class="mb-3">
                    <label for="simpleinput" class="form-label">Adult Price</label>
                    <input type="number" name="adult_price" id="adult_price" class="form-control">
                  </div>

                  <div class="mb-3">
                    <label for="simpleinput" class="form-label">Child Price</label>
                    <input type="number" name="child_price" id="child_price" class="form-control">
                  </div>

                  <div class="mb-3">
                    <label for="example-date" class="form-label">Departure Date</label>
                    <input class="form-control" name="departure_date" id="departure_date" type="date" name="date">
                  </div>

                  <div class="mb-3">
                    <label for="example-date" class="form-label">Arrivel Date</label>
                    <input class="form-control" name="arrival_date" id="arrival_date" type="date" name="date">
                  </div>

                  <div class="mb-3">
                    <label for="simpleinput" class="form-label">Duration</label>
                    <input type="number" name="days" id="days" class="form-control">
                  </div>

                  <div class="mb-3">
                    <label for="simpleinput" class="form-label">Hotel Distance</label>
                    <input type="number" name="hotel_distence" id="hotel_distence" class="form-control">
                  </div>

                  <div class="mb-3">
                    <label for="example-textarea" class="form-label">Description</label>
                    <textarea class="form-control" name="description" id="description" rows="5"></textarea>
                  </div>

                  <div class="mb-3">
                    <label for="example-fileinput" class="form-label">Upload Thumbnail</label>
                    <input type="file" name="thumbnail" id="thumbnail" class="form-control">
                  </div>

                  <div class="mb-3">
                    <label for="formFileMultiple" class="form-label">Upload Gallary Image</label>
                    <input class="form-control" type="file" name="gallary_image" id="gallary_image" multiple>
                  </div>
                  <button type="submit" class="btn btn-info btn-xs" id="sa-success">SUBMIT</button>
                </form>
              </div>
            </div>
          </div>
      </div>
      <%- include ('common/footer') %>
  </div>
  <%- include ('common/footer-scripts') %>
    <script src="<%= baseUrl %>/assets/libs/flatpickr/flatpickr.min.js"></script>
    <!-- <script src="<%= baseUrl %>/assets/libs/apexcharts/apexcharts.min.js"></script> -->
    <script src="<%= baseUrl %>/assets/libs/selectize/js/standalone/selectize.min.js"></script>

    <!-- Dashboar 1 init js-->
    <!-- <script src="<%= baseUrl %>/assets/js/pages/dashboard-1.init.js"></script> -->
    <script src="<%= baseUrl %>/assets/libs/sweetalert2/sweetalert2.all.min.js"></script>

    <!-- Sweet alert init js-->
    <script src="<%= baseUrl %>/assets/js/pages/sweet-alerts.init.js"></script>
</body>

</html>